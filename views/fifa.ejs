<script>
    let travel = document.getElementById("travelValue").innerHTML;
    let check = () =>{
        if (travel === "fifa") {
            window.open("fifaSpelen", "_self")
        }
        else{
            alert("Je bent niet ingeschreven voor de 'fifa' reis")
        }
    }
