    <!-- Costum style CSS -->
    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" type="text/css" href="/fonts.css">
    
    <!-- Page title -->
    <title>FIFA-PLANET | lotr </title>
</head>

<body>
    <header>
        <!-- Navigatie bar met responsive design -->
        <!-- nav-header for border bottom line -->
        <%- include('navigatieTrue'); %>
    </header>
    <main class="main-container2">
        <div class="thema-position">
            <h1 class="thema-titel">Lord of the rings spelen</h1>
            <img src="/images/lord-of-the-rings-logo.png" alt="lord of the rings logo" class="thema-foto" onclick="check()">
            <p id="travelValue" style="visibility: hidden;"><%= travel %></p>
        </div>
    </main>
    <footer>
        <div class="container"> 
            <p>Copyright &copy; 2021 | IT Project | FIFA-Planet</p>
            <p>Krystian Rola | Othmane El Aissati | Khayodele Wellens | Kevin Ver Elst </p>
        </div>
    </footer>
</body>
<script>

    let travel = document.getElementById("travelValue").innerHTML;
    let check = () =>{
        if (travel === "lord-of-the-rings") {
            alert("Het spel is helaas nog niet beschikbaar")
        }
        else{
            alert("Je bent niet ingeschreven voor de 'lord of the rings' reis")
        }
    }
</script>
</html>
